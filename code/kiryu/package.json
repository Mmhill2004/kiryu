{
  "name": "security-dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "Unified security operations dashboard",
  "scripts": {
    "dev": "pnpm --filter @security-dashboard/worker dev",
    "build": "pnpm --filter @security-dashboard/worker build",
    "deploy": "pnpm --filter @security-dashboard/worker deploy",
    "db:migrate": "wrangler d1 execute security-dashboard-db --remote --file=packages/db/migrations/0001_initial_schema.sql",
    "db:migrate:local": "wrangler d1 execute security-dashboard-db --local --file=packages/db/migrations/0001_initial_schema.sql",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}
